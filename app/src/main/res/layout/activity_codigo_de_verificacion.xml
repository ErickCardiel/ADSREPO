<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uber"
    tools:context="com.example.erickcairdiel.koko.CodigoDeVerificacion">

    <Button
        android:id="@+id/btn_continuar"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/continuar"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="lollipop" />

    <EditText
        android:id="@+id/ICodigo"
        android:layout_width="180dp"
        android:layout_height="64dp"
        android:layout_marginBottom="376dp"
        android:layout_marginEnd="200dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/black"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_IngresaL"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_IngresaL"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="52dp"
        android:gravity="start"
        android:text="@string/txt_IngresarL"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtColocarNumero"
        android:layout_width="169dp"
        android:layout_height="38dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="80dp"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
